<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VCompressor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/reddish</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="buttonTint">@color/reddish</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/DotTheme</item>
    </style>

    <style name="DotTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ButtonsStyle">
        <item name="backgroundTint">@color/reddish</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="elevation">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DialogButtons">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="elevation">@dimen/_10sdp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TBar" parent="">
        <item name="android:background">@color/reddish</item>
    </style>

</resources>